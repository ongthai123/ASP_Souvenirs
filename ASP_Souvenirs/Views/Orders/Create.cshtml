@model ASP_Souvenirs.Models.Order
@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "Create Order";
}
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{var user = UserManager.GetUserAsync(User).Result;}
<h2>Create Order</h2>
<h3><span class="glyphicon glyphicon-exclamation-sign"></span>Please confirm your order details.</h3>

<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        <div>

            <label for=""></label>
            <dl class="dl-horizontal">
                <dt>Date</dt>
                <dd><p>@DateTime.Now</p></dd>

                <dt>Full Name</dt>
                <dd><p>@user.FullName</p></dd>

                <dt>Email</dt>
                <dd><p>@user.Email</p></dd>

                <dt>Mobile Phone Number</dt>
                <dd>
                    @if (user.MobilePhoneNumber != null)
                    {

                        <p>@user.MobilePhoneNumber</p>
                    }
                    else
                    {
                        <p>No mobile phone number provided.</p>
                    }
                </dd>

                <dt>Home Phone Number</dt>
                <dd>
                    @if (user.HomePhoneNumber != null)
                    {

                        <p>@user.HomePhoneNumber</p>
                    }
                    else
                    {
                        <p>No home phone number provided.</p>
                    }
                </dd>

                <dt>Work Phone Number</dt>
                <dd>
                    @if (user.WorkPhoneNumber != null)
                    {

                        <p>@user.WorkPhoneNumber</p>
                    }
                    else
                    {
                        <p>No work phone number provided.</p>
                    }
                </dd>

                <dt>Address</dt>
                <dd><p>@user.Address</p></dd>
            </dl>


        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-10">
                <button type="submit" class="btn btn-primary btn-lg raised">
                    Place Order <span class="glyphicon glyphicon-fast-forward"></span>
                </button>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}